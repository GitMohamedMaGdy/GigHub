@model GigHub.ViewModels.GigViewModel
@{
    ViewBag.Title = Model.Heading;
}

<h2>@Model.Heading</h2>
@using (Html.BeginForm(Model.Action, "Gigs"))
{

    <p class="alert alert-info">All Field are <strong>Required</strong></p>
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m=>m.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Venue)
        @Html.TextBoxFor(m => m.Venue, new { @class = "form-control", @autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.Venue, null, new { @style = "text-color:red" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Date)
        @Html.TextBoxFor(m => m.Date, new { @class = "form-control" , placeholder = "eg 14 Jan 2020" })
        @Html.ValidationMessageFor(m => m.Date, null, new { @style = "text-color:red" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Time)
        @Html.TextBoxFor(m => m.Time, new { @class = "form-control", placeholder = "eg 20:00" })
        @Html.ValidationMessageFor(m => m.Time, null, new { @style = "text-color:red"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Genre)
        @Html.DropDownListFor(m => m.Genre, new SelectList(Model.Genres, "Id", "Name"), new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Genre, null, new { @style = "text-color:red" })

    </div>
    <button type="submit" class="btn btn-primary btn-lg">Save</button>

}

@section scripts{

    @Scripts.Render("~/bundles/jqueryval")


}
