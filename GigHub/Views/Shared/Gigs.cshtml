
@model GigHub.ViewModels.GigsViewModel
@{
    ViewBag.Title = "Home Page";
}

<h1>@Model.Heading</h1>

<ul class="gigs voffest4">
    @foreach (var gig in Model.upCommingGigs)
    {
        <li>
            <div class="date">
                <div class="month">
                    @gig.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @gig.DateTime.ToString("d ")

                </div>
            </div>
            <div class="details">
                <span class="artist">
                    @gig.Artist.Name

                    @if (gig.isCancelled)
                    {
                        <span class="label label-warning">Canceled</span>
                    }
                    @if (Model.showAction && !gig.isCancelled)
                    {
                        <button class="btn btn-link btn-sm js-toggle-following" data-user-id="@gig.ArtistId">Follow</button>
                    }
                </span>
                <span class="genre">
                    @gig.Genre.Name
                </span>
                @if (Model.showAction)
                {
                    <button data-gig-id="@gig.Id" class="btn btn-default btn-sm pull-right js-toggle-attendance">Going?</button>
                }

            </div>
        </li>
    }
</ul>

@section scripts {


    <script type="text/javascript">
        $(document).ready(function () {
            $(".js-toggle-attendance").click(function (e) {
                var button = $(e.target);
                $.post("/api/attendances", { gigId: button.attr("data-gig-id") })
                    .done(function () {
                        button.removeClass("btn-default")
                            .addClass("btn-info")
                            .text("Going");

                    })

                    .fail(function () {
                        alert("something error");
                    });

            });

            $(".js-toggle-following").click(function (e) {
                var button = $(e.target);
                $.post("/api/followings", { FolloweeId: button.attr("data-user-id") })
                    .done(function () {
                        button.text("Following");


                    })

                    .fail(function () {
                        alert("something error");
                    });

            });
        });
    </script>

}

